<div class="col-md-6">
  <h2>All Bookmarks</h2>
  <%= will_paginate %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Site</th>
        </tr>
      </thead>
      <tbody>
        <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= link_to bookmark.title, bookmark %></td>
          <td><%= link_to bookmark.site.top_level_url, bookmark.site %></td>
          <td><%= link_to "edit", edit_bookmark_path(bookmark),
                class: "btn btn-outline-secondary" %>
          </td>
          <td><%= link_to "delete", bookmark, 
                method: :delete, 
                data: { confirm: "You sure?" },
                class: "btn btn-outline-danger" %></td>
          </td>
        </tr>
        <% end %> 
      </tbody>
    </table>
  <%= will_paginate %>
</div>